<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Champlain_Computer_Science_Tutoring.TutoringEdit">
    <ContentPage.Content>
        <StackLayout Padding="20" VerticalOptions="Center">
            <Label Text="Welcome to Register Page!"
                        FontSize="Large"
                        VerticalOptions="Center"
                        HorizontalOptions="Center" />
            <Entry x:Name="txtId"
                        Placeholder="TutoringId"
                        FontSize="Large"/>
            <Picker x:Name="pickCourse"
                        FontSize="Large"/>
            <Entry x:Name="txtDuration"
                        Placeholder="Tutoring Session Duration"
                        FontSize="Large"/>
            <DatePicker x:Name="txtDate"
                        FontSize="Large"/>
            <Button x:Name="btnSend"
                        Font="large"
                        TextColor="White"
                        BackgroundColor="#66181D"
                        CornerRadius="100"
                        Clicked="btnUpdate_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>